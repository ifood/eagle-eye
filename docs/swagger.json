{
    "swagger": "2.0",
    "info": {
        "description": "Scanner service is able to scan files as they arrive at your cloud bob storage",
        "title": "Scanner service",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Security Engineering",
            "email": "security-engineering@ifood.com.br"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "basePath": "/v1/",
    "paths": {
        "/files": {
            "post": {
                "security": [
                    {
                        "ApiKey": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Schedules file for scan",
                "parameters": [
                    {
                        "type": "file",
                        "description": "File to be scanned",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entities.ScheduleResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/entities.ScheduleResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/entities.ScheduleResponse"
                        }
                    }
                }
            }
        },
        "/files/{id}": {
            "get": {
                "security": [
                    {
                        "ApiKey": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Get individual file scan result",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Scan id returned by the file schedule endpoint",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    }
                }
            }
        },
        "/objects": {
            "get": {
                "security": [
                    {
                        "ApiKey": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "objects"
                ],
                "summary": "Get aggregate bucket scan result",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Restrict result to specific bucket",
                        "name": "bucket",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Restrict result to single day or month",
                        "name": "period",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Reference date with format YYYY-MM-DD",
                        "name": "date",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "ApiKey": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "objects"
                ],
                "summary": "Schedules object from bucket for scan",
                "parameters": [
                    {
                        "description": "Object to be scanned",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entities.RequestObjectScan"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entities.ScheduleResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/entities.ScheduleResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/entities.ScheduleResponse"
                        }
                    }
                }
            }
        },
        "/objects/{id}": {
            "get": {
                "security": [
                    {
                        "ApiKey": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "objects"
                ],
                "summary": "Get individual object scan result",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Scan id returned by the object schedule endpoint",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/entities.ObjectScanResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "entities.ObjectScanResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "result": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/entities.ScanResponse"
                    }
                }
            }
        },
        "entities.RequestObjectScan": {
            "type": "object",
            "required": [
                "bucket",
                "key",
                "region"
            ],
            "properties": {
                "bucket": {
                    "type": "string"
                },
                "key": {
                    "type": "string"
                },
                "region": {
                    "type": "string"
                }
            }
        },
        "entities.ScanResponse": {
            "type": "object",
            "properties": {
                "bucket": {
                    "type": "string"
                },
                "bypassed": {
                    "type": "integer"
                },
                "entropy": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer"
                    }
                },
                "errors": {
                    "type": "integer"
                },
                "matches": {
                    "type": "integer"
                },
                "requests": {
                    "type": "integer"
                },
                "scanned": {
                    "type": "integer"
                }
            }
        },
        "entities.ScheduleResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKey": {
            "description": "Only needed if server was started with enforced authorization. Type \\'Bearer\\' and then your apikey.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}